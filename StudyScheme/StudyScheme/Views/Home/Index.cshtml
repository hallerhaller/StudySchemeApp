
@{
    ViewBag.Title = "Index";
}


<!DOCTYPE html>

<html lang="en">

<head>

    <meta charset="utf-8">

    <title>Calendar | by Valeriu Timbuc for DesignModo</title>

    <link rel="stylesheet" href="~/Content/calendar.css" media="screen">

    <style type="text/css">
        body {
            background: url(../../Content/img/bg.png) repeat;
            width: 960px;
            margin: 0 auto;
        }

        .footer {
            margin-top: 100px;
            text-align: center;
            color: #666;
            font: bold 14px Arial;
        }

            .footer a {
                color: #999;
                text-decoration: none;
            }

        #wrapper {
            padding: 50px 0 0 325px;
        }

        #calendar {
            margin: 25px auto;
            width: 370px;
        }
    </style>
    <meta name="robots" content="noindex,follow" />
</head>

<body>

    <img src="~/Content/img/title.png" alt="">

    <div id="calendar"></div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script src="~/Content/js/jquery-ui-datepicker.min.js"></script>
    <script>
	$('#calendar').datepicker({
		inline: true,
		firstDay: 1,
		showOtherMonths: true,
		dayNamesMin: ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat']
	});
    </script>


</body>

</html>